<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context=".CityInfoActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:visibility="invisible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearLayout"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAttractionLandscape"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/greyLine1"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/black"/>

                <View
                    android:id="@+id/greyLine2"
                    android:layout_width="80dp"
                    android:layout_marginTop="24dp"
                    android:layout_height="1px"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/attractionNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/ubuntu_light"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/attraction_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:gravity="center"
                    android:layout_marginTop="3dp" />

                <View
                    android:id="@+id/greyLine3"
                    android:layout_width="80dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="1px"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/attractionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:gravity="center"
                    android:padding="16dp" />

                <View
                    android:id="@+id/greyLine4"
                    android:layout_width="160dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="1px"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/working_hours_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:paddingHorizontal="16dp"
                    android:text="График работы"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/working_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingHorizontal="16dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text=""
                    android:paddingVertical="8dp"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/greyLine5"
                    android:layout_width="160dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="1px"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/rating_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="16dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Если вы были в этом месте, пожалуйста, оцените его:"
                    android:paddingVertical="8dp"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="@color/orange"
                    android:secondaryProgressTint="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/favorite_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_favorite_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>